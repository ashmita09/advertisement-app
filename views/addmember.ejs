        <input type="text" name="password" placeholder="Set Password" required="required" />
        <input type="number" name="age" placeholder="Enter Age" required="required" />
        <input type="date" name="dob" placeholder="Enter DOB" required="required" />
        <input type="text" name="address" placeholder="Enter Address" required="required" />
        <input type="number" name="pincode" placeholder="Enter Pin Code" required="required" />
        <input type="number" name="mobile" placeholder="Enter Phone Number" required="required" />
        <button class="btnRegister" type="submit">Register</button>
      </div>    
  </form>

